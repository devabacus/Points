<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ButtonsFragment">

<android.support.constraint.ConstraintLayout
    android:id="@+id/const_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TableLayout
        android:id="@+id/table_btns"
        android:visibility="gone"
        android:layout_width="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        >

        <TableRow>
            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/zero"

                style="@style/TextBig"
                />


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/but7"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/but_7" />

            <Button
                android:id="@+id/but8"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/but_8" />

            <Button
                android:id="@+id/but9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/but_9" />

        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/but4"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_4" />

            <Button
                android:id="@+id/but5"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_5" />

            <Button
                android:id="@+id/but6"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_6" />

        </TableRow>


        <TableRow
            android:layout_width="0dp">

            <Button
                android:id="@+id/but1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_1" />

            <Button
                android:id="@+id/but2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_2" />

            <Button
                android:id="@+id/but3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_3" />


        </TableRow>


        <TableRow>


            <Button
                android:id="@+id/but0"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:text="@string/but_0" />

            <Button
                android:id="@+id/but10"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_10" />

            <Button
                android:id="@+id/but_Ñ"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/but_reset" />


        </TableRow>

        <TableRow
            android:layout_marginStart="5dp"
            android:gravity="center"
            >

            <RadioGroup
                android:id="@+id/rg2"
                android:orientation="horizontal"
                android:layout_span="2">

                <RadioButton
                    android:id="@+id/rbPlus"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    />


                <RadioButton
                    android:id="@+id/rbMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    />


            </RadioGroup>

            <Button
                android:id="@+id/but_save"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/but_save" />




        </TableRow>

</TableLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/const_easy_mode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_inc_5"
            android:text="+5"
            style="@style/TextBigBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_inc_10"
            android:text="+10"
            style="@style/TextBigBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_inc_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_inc_20"
            android:text="+20"
            style="@style/TextBigBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_inc_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_inc_30"
            android:text="+30"
            style="@style/TextBigBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_inc_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_inc_50"
            android:text="+50"
            style="@style/TextBigBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_inc_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_inc_100"
            android:text="+100"
            style="@style/TextBigBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_inc_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>


<CheckBox
android:text="easy"
android:id="@+id/cb_easy"
    android:checked="true"
android:layout_width="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/const_table"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

android:layout_height="wrap_content"
    />
</android.support.constraint.ConstraintLayout>