<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <fragment
        android:id="@+id/frag_items"
        android:name="com.example.user.points.LastItemsFragment"
        android:layout_width="match_parent"
        android:layout_height="180dp" />


    <fragment
        android:id="@+id/frag_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_items"
        app:layout_constraintWidth_percent="0.6"


        />

    <fragment
        android:id="@+id/frag_cat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/frag_buttons"
        app:layout_constraintTop_toBottomOf="@id/frag_items"
        app:layout_constraintWidth_percent="0.4"

        />

</android.support.constraint.ConstraintLayout>